<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="吃喝"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_profile_chihe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="玩乐"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_profile_wanle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="其他"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_profile_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView style="@style/separator" />

    <Button
        android:id="@+id/btn_profile_maitian"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/transparent"
        android:gravity="center_vertical|start"
        android:paddingLeft="40dp"
        android:text="我的麦田"
        android:textColor="@color/profile_text"
        android:textSize="16sp" />

    <TextView style="@style/separator" />

    <Button
        android:id="@+id/btn_profile_favourite"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/transparent"
        android:gravity="center_vertical|start"
        android:paddingLeft="40dp"
        android:text="我的收藏"
        android:textColor="@color/profile_text"
        android:textSize="16sp" />

    <TextView style="@style/separator" />

    <Button
        android:id="@+id/btn_profile_friend"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/transparent"
        android:gravity="center_vertical|start"
        android:paddingLeft="40dp"
        android:text="我的好友"
        android:textColor="@color/profile_text"
        android:textSize="16sp" />

    <TextView style="@style/separator" />

</LinearLayout>