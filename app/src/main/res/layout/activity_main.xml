<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tab_item_map"
            style="@style/item_tab"
            android:drawableTop="@drawable/ic_tab_map_normal"
            android:text="地图" />

        <TextView
            android:id="@+id/tab_item_grain"
            style="@style/item_tab"
            android:drawableTop="@drawable/ic_tab_message_normal"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:text="麦粒" />

        <TextView
            android:id="@+id/tab_item_publish"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_tab_publish"
            android:drawableTop="@drawable/transparent"
            android:gravity="center_horizontal"
            android:paddingTop="7dp"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tab_item_message"
            style="@style/item_tab"
            android:drawableTop="@drawable/ic_tab_message_normal"
            android:paddingLeft="20dp"
            android:text="消息" />

        <TextView
            android:id="@+id/tab_item_private"
            style="@style/item_tab"
            android:drawableTop="@drawable/ic_tab_private_normal"
            android:text="个人" />
    </LinearLayout>
</LinearLayout>  