<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_friend_list_catalog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="#F0F0F0"
        android:paddingBottom="5dip"
        android:paddingLeft="40dp"
        android:paddingTop="5dp"
        android:text="A"
        android:textColor="#454545" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/civ_item_friend_list_portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_new_friend" />

        <TextView
            android:id="@+id/tv_item_friend_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allen S.T"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView style="@style/separator" />
</LinearLayout>