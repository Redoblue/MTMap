<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.amap.api.maps.MapView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey" />

    <!--<com.capricorn.ArcMenu-->
    <!--android:id="@+id/arc_menu"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_alignParentStart="true"-->
    <!--android:layout_marginBottom="-60dp"-->
    <!--android:layout_marginLeft="-95dp"-->
    <!--android:layout_marginStart="-96dp"-->
    <!--arc:childSize="40dp"-->
    <!--arc:fromDegrees="0.0"-->
    <!--arc:toDegrees="-90.0" />-->

    <ToggleButton
        android:id="@+id/btn_map_ray"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/btn_map_locate"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/selector_btn_map_ray"
        android:textOff=""
        android:textOn="" />

    <Button
        android:id="@+id/btn_map_locate"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/btn_map_locate" />

    <RelativeLayout
        android:id="@+id/layout_map_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_map_search">

        <EditText
            android:id="@+id/et_map_search"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:drawableLeft="@drawable/ic_action_search"
            android:drawablePadding="10dp"
            android:focusable="false"
            android:gravity="center_vertical"
            android:text="搜索地点"
            android:textColor="@color/dark_grey" />
    </RelativeLayout>
</RelativeLayout>
